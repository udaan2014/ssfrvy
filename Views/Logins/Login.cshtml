
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container" id="loginContainer">
        @if (ViewData["error"] != null)
            {
            <div class="alert alert-warning">@ViewData["error"]</div>
        }
        <div class="panel panel-primary">
            <div class="panel-heading">
                Login Form
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
            {
                    <div class="form-group">
                        <label id="userIDLabel" class="control-label">User ID</label>
                        <input type="text" id="userIDText" name="userID" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label id="userIDLabel" class="control-label">Password</label>
                        <input type="password" id="passwordText" name="password" class="form-control" />
                    </div>
                    <input type="submit" value="Log In" class="btn btn-primary" />
                }
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
